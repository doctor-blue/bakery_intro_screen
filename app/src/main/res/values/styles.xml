<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="Widget.Example.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Widget.Example.TextInputLayout</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>
    <style name="TextAppearance.Example.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
